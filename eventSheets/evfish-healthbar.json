{
	"name": "evFish-HealthBar",
	"events": [
		{
			"eventType": "comment",
			"text": "This Event Sheet and it's associated layout show how to generate a healthbar using a spritefont, this makes it possible to have quarters of hearts, whereas a simple tiled background wouldn't allow it."
		},
		{
			"functionName": "CreateHealthBarText",
			"functionDescription": "Will take two numbers (CurrentNumberOfQuarter and MaxQuarterOfHearts) and generate a string composed of the numbers 0 1 2 3 4 to represent a health bar in a spritefont",
			"functionCategory": "",
			"functionReturnType": "string",
			"functionIsAsync": false,
			"functionParameters": [
				{
					"name": "MaxQuarterOfHearts",
					"type": "number",
					"initialValue": "32",
					"comment": "the max amount of quarter of hearts in the healthbar",
					"sid": 122904001418248
				},
				{
					"name": "CurrentNumberOfQuarter",
					"type": "number",
					"initialValue": "0",
					"comment": "The current amount of health",
					"sid": 760415205424982
				}
			],
			"eventType": "function-block",
			"conditions": [],
			"actions": [
				{
					"id": "set-eventvar-value",
					"objectClass": "System",
					"sid": 867646781861314,
					"parameters": {
						"variable": "CurrentNumberOfQuarter",
						"value": "clamp(CurrentNumberOfQuarter, 0, MaxQuarterOfHearts)"
					}
				}
			],
			"sid": 908911503616488,
			"children": [
				{
					"eventType": "variable",
					"name": "endstring",
					"type": "string",
					"initialValue": "",
					"comment": "The number of quarter of hearts, encoded to use in a spritefont",
					"isStatic": false,
					"isConstant": false,
					"sid": 749844649423797
				},
				{
					"eventType": "block",
					"conditions": [
						{
							"id": "repeat",
							"objectClass": "System",
							"sid": 874474574448103,
							"parameters": {
								"count": "floor(MaxQuarterOfHearts/4)"
							}
						}
					],
					"actions": [
						{
							"id": "set-eventvar-value",
							"objectClass": "System",
							"sid": 922273717279060,
							"parameters": {
								"variable": "endstring",
								"value": "endstring&clamp((CurrentNumberOfQuarter-loopindex*4),0,4)"
							}
						}
					],
					"sid": 590038426886898
				},
				{
					"eventType": "block",
					"conditions": [],
					"actions": [
						{
							"id": "set-function-return-value",
							"objectClass": "Functions",
							"sid": 214606418182141,
							"parameters": {
								"value": "endstring"
							}
						}
					],
					"sid": 942079430653902
				}
			]
		},
		{
			"eventType": "block",
			"conditions": [
				{
					"id": "on-changed",
					"objectClass": "Fish_Slider",
					"sid": 411628034508839
				}
			],
			"actions": [
				{
					"id": "set-text",
					"objectClass": "Fish_Heart",
					"sid": 347731757865787,
